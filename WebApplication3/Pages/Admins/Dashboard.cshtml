@page
@model WebApplication3.Pages.Admins.DashboardModel

@{
    ViewData["Title"] = "Dashboard Admin";
}

<div class="min-h-screen text-slate-200 relative">

    <div class="mb-6">
        <h1 class="text-3xl font-bold text-white tracking-tight">Tableau de Bord</h1>
        <p class="text-slate-400">Bienvenue dans l'espace d'administration.</p>
    </div>

    <nav class="bg-slate-800/80 backdrop-blur border border-slate-700 rounded-xl p-4 mb-8 flex flex-col md:flex-row justify-between items-center shadow-lg gap-4">
        <div class="flex space-x-4 text-sm font-medium">
            <a href="#" class="text-blue-400 hover:text-blue-300 transition border-b-2 border-blue-400 pb-1">Vue d'ensemble</a>
            <a href="#" class="text-slate-400 hover:text-white transition pb-1">Analytiques</a>
            <a href="#" class="text-slate-400 hover:text-white transition pb-1">Rapports</a>
            <a href="#" class="text-slate-400 hover:text-white transition pb-1">Paramètres</a>
        </div>

        <div class="flex items-center gap-4 w-full md:w-auto">
            <div class="relative w-full md:w-64">
                <input type="text" placeholder="Rechercher..."
                       class="w-full bg-slate-900 border border-slate-700 rounded-lg px-4 py-2 text-sm focus:outline-none focus:border-blue-500 text-slate-200 placeholder-slate-500 transition">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 absolute right-3 top-3 text-slate-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                </svg>
            </div>
            <div class="text-slate-400 text-sm hidden md:block">
                @DateTime.Now.ToString("dd MMM yyyy")
            </div>
        </div>
    </nav>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
        <div class="bg-gradient-to-br from-slate-800 to-slate-900 border border-slate-700 p-5 rounded-xl shadow-lg">
            <div class="flex justify-between items-center">
                <div>
                    <p class="text-slate-400 text-sm uppercase font-semibold">Ventes du jour</p>
                    <p class="text-2xl font-bold text-white mt-1">0 MAD</p>
                </div>
                <div class="p-3 bg-blue-500/20 rounded-lg text-blue-400">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" /></svg>
                </div>
            </div>
        </div>
        <div class="bg-gradient-to-br from-slate-800 to-slate-900 border border-slate-700 p-5 rounded-xl shadow-lg">
            <div class="flex justify-between items-center">
                <div>
                    <p class="text-slate-400 text-sm uppercase font-semibold">Nouveaux Clients</p>
                    <p class="text-2xl font-bold text-white mt-1">0</p>
                </div>
                <div class="p-3 bg-green-500/20 rounded-lg text-green-400">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" /></svg>
                </div>
            </div>
        </div>
        <div class="bg-gradient-to-br from-slate-800 to-slate-900 border border-slate-700 p-5 rounded-xl shadow-lg">
            <div class="flex justify-between items-center">
                <div>
                    <p class="text-slate-400 text-sm uppercase font-semibold">Commandes en attente</p>
                    <p class="text-2xl font-bold text-white mt-1">0</p>
                </div>
                <div class="p-3 bg-orange-500/20 rounded-lg text-orange-400">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
                </div>
            </div>
        </div>
    </div>

    <h2 class="text-xl font-bold text-white mb-4">Accès Rapide</h2>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">

        <div class="group bg-slate-800 border border-slate-700 rounded-xl p-6 shadow-xl hover:border-blue-500/50 hover:shadow-blue-500/10 transition duration-300">
            <div class="flex justify-between items-start mb-4">
                <div class="p-3 bg-blue-900/30 rounded-lg text-blue-400 group-hover:bg-blue-600 group-hover:text-white transition">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
                    </svg>
                </div>
            </div>
            <h2 class="text-lg font-semibold text-white mb-1">Produits</h2>
            <p class="text-slate-400 text-sm mb-6">Ajouter ou modifier le catalogue.</p>
            <a asp-page="/Admins/gestionProduits" class="flex items-center justify-center w-full py-2 bg-slate-700 hover:bg-blue-600 text-white rounded-lg transition text-sm font-medium">
                Gérer les produits
            </a>
        </div>

        <div class="group bg-slate-800 border border-slate-700 rounded-xl p-6 shadow-xl hover:border-purple-500/50 hover:shadow-purple-500/10 transition duration-300">
            <div class="flex justify-between items-start mb-4">
                <div class="p-3 bg-purple-900/30 rounded-lg text-purple-400 group-hover:bg-purple-600 group-hover:text-white transition">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                    </svg>
                </div>
            </div>
            <h2 class="text-lg font-semibold text-white mb-1">Admins</h2>
            <p class="text-slate-400 text-sm mb-6">Gérer les droits d'accès.</p>
            <a asp-page="/Admins/AjouterAdmin" class="flex items-center justify-center w-full py-2 bg-slate-700 hover:bg-purple-600 text-white rounded-lg transition text-sm font-medium">
                Ajouter Admin
            </a>
        </div>

        <div class="group bg-slate-800 border border-slate-700 rounded-xl p-6 shadow-xl hover:border-yellow-500/50 hover:shadow-yellow-500/10 transition duration-300">
            <div class="flex justify-between items-start mb-4">
                <div class="p-3 bg-yellow-900/30 rounded-lg text-yellow-400 group-hover:bg-yellow-600 group-hover:text-white transition">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
                    </svg>
                </div>
            </div>
            <h2 class="text-lg font-semibold text-white mb-1">Performances</h2>
            <p class="text-slate-400 text-sm mb-6">Analyser les logs du site.</p>
            <button onclick="openModal()" class="flex items-center justify-center w-full py-2 bg-slate-700 hover:bg-yellow-600 text-white rounded-lg transition text-sm font-medium">
                Voir les Logs
            </button>
        </div>

        <div class="group bg-slate-800 border border-slate-700 rounded-xl p-6 shadow-xl hover:border-red-500/50 hover:shadow-red-500/10 transition duration-300">
            <div class="flex justify-between items-start mb-4">
                <div class="p-3 bg-red-900/30 rounded-lg text-red-400 group-hover:bg-red-600 group-hover:text-white transition">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
                    </svg>
                </div>
            </div>
            <h2 class="text-lg font-semibold text-white mb-1">Session</h2>
            <p class="text-slate-400 text-sm mb-6">Fermer la session actuelle.</p>
            <a asp-page="/Admins/Logout" class="flex items-center justify-center w-full py-2 bg-slate-700 hover:bg-red-600 text-white rounded-lg transition text-sm font-medium">
                Se Déconnecter
            </a>
        </div>

    </div>
</div>

<div id="perfModal" class="fixed inset-0 z-50 hidden" aria-labelledby="modal-title" role="dialog" aria-modal="true">

    <div class="fixed inset-0 bg-slate-900/80 backdrop-blur-sm transition-opacity" onclick="closeModal()"></div>

    <div class="fixed inset-0 z-10 overflow-y-auto">
        <div class="flex min-h-full items-center justify-center p-4 text-center sm:p-0">

            <div class="relative transform overflow-hidden rounded-xl bg-slate-800 border border-slate-700 text-left shadow-2xl transition-all sm:my-8 sm:w-full sm:max-w-4xl">

                <div class="bg-slate-800 px-4 py-3 sm:px-6 flex justify-between items-center border-b border-slate-700">
                    <h3 class="text-lg font-medium leading-6 text-white" id="modal-title">Rapport de Performance</h3>
                    <button type="button" onclick="closeModal()" class="text-slate-400 hover:text-white transition">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                        </svg>
                    </button>
                </div>

                <div class="px-4 py-4 sm:p-6 bg-slate-800 max-h-[60vh] overflow-y-auto">
                    <table class="w-full text-left border-collapse">
                        <thead>
                            <tr class="text-slate-400 border-b border-slate-700 text-sm uppercase">
                                <th class="py-3 px-4 font-semibold">Page</th>
                                <th class="py-3 px-4 font-semibold">Méthode</th>
                                <th class="py-3 px-4 font-semibold text-right">Temps (ms)</th>
                                <th class="py-3 px-4 font-semibold text-right">Date</th>
                            </tr>
                        </thead>
                        <tbody class="text-slate-300 text-sm">
                            @foreach (var log in Model.Logs)
                            {
                                <tr class="border-b border-slate-700 hover:bg-slate-700/50 transition">
                                    <td class="py-3 px-4">
                                        <span class="bg-slate-700 text-white px-2 py-1 rounded text-xs font-mono">@log.Page</span>
                                    </td>
                                    <td class="py-3 px-4">@log.Methode</td>
                                    <td class="py-3 px-4 text-right">
                                        @if (log.TempsMs > 500)
                                        {
                                            <span class="text-red-400 font-bold">@log.TempsMs ms</span>
                                        }
                                        else
                                        {
                                            <span class="text-green-400">@log.TempsMs ms</span>
                                        }
                                    </td>
                                    <td class="py-3 px-4 text-right text-slate-400">@log.Date</td>
                                </tr>
                            }
                        </tbody>
                    </table>

                    @if (!Model.Logs.Any())
                    {
                        <div class="text-center py-8 text-slate-500">
                            Aucune donnée de performance enregistrée.
                        </div>
                    }
                </div>

                <div class="bg-slate-900 px-4 py-3 sm:flex sm:flex-row-reverse sm:px-6 border-t border-slate-700">
                    <button type="button" onclick="closeModal()" class="mt-3 inline-flex w-full justify-center rounded-lg bg-slate-700 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-slate-600 sm:mt-0 sm:w-auto">
                        Fermer
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function openModal() {
        const modal = document.getElementById('perfModal');
        modal.classList.remove('hidden');
    }

    function closeModal() {
        const modal = document.getElementById('perfModal');
        modal.classList.add('hidden');
    }

    // Fermer avec la touche Echap
    document.addEventListener('keydown', function(event) {
        if (event.key === "Escape") {
            closeModal();
        }
    });
</script>