@page
@model WebApplication3.Pages.Admins.gestionProduitsModel
@{
    ViewData["Title"] = "Dashboard Inventaire - Dark Mode";
}

<script src="https://cdn.tailwindcss.com"></script>
<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0" />

<div class="min-h-screen text-slate-200 p-2 md:p-2">
    <div class="max-w-6xl mx-auto">

        <div class="flex flex-col md:flex-row md:items-center justify-between gap-6 mb-10">
            <div class="md:w-1/3">
                <h1 class="text-4xl font-black text-white tracking-tight">Gestion Stock</h1>
                <p class="text-slate-400 mt-1">Supervision de l'inventaire en temps réel.</p>
            </div>

            <div class="flex-1 max-w-md w-full">
                <div class="relative group">
                    <span class="material-symbols-outlined absolute left-4 top-1/2 -translate-y-1/2 text-slate-500 group-focus-within:text-indigo-400 transition-colors">
                        search
                    </span>
                    <input type="text"  
                           id="searchInput"
                           placeholder="Rechercher un produit..." 
                           class="w-full bg-slate-900/50 border border-slate-800 text-slate-200 pl-12 pr-4 py-3 rounded-xl outline-none focus:border-indigo-500/50 focus:ring-2 focus:ring-indigo-500/10 transition-all"
                    />
                </div>
            </div>

            <div class="md:w-1/3 flex md:justify-end">
                <button onclick="toggleModal('modalAjout')"
                        class="inline-flex items-center px-6 py-3 bg-indigo-500 hover:bg-indigo-400 text-white font-bold rounded-xl transition-all shadow-[0_0_20px_rgba(99,102,241,0.3)] gap-2 group">
                    <span class="material-symbols-outlined transition-transform group-hover:rotate-90">add</span>
                    Nouveau Produit
                </button>
            </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-10">
            <div class="bg-slate-900 p-6 rounded-2xl border border-slate-800 flex items-center gap-5 transition-transform hover:scale-[1.02]">
                <div class="p-4 bg-indigo-500/10 text-indigo-400 rounded-xl border border-indigo-500/20">
                    <span class="material-symbols-outlined scale-125">inventory_2</span>
                </div>
                <div>
                    <p class="text-xs text-slate-500 uppercase font-black tracking-widest">Total Produits</p>
                    <p class="text-2xl font-bold text-white">@Model.Produits.Count</p>
                </div>
            </div>

            <div class="bg-slate-900 p-6 rounded-2xl border border-slate-800 flex items-center gap-5 transition-transform hover:scale-[1.02]">
                <div class="p-4 bg-rose-500/10 text-rose-400 rounded-xl border border-rose-500/20">
                    <span class="material-symbols-outlined scale-125">priority_high</span>
                </div>
                <div>
                    <p class="text-xs text-slate-500 uppercase font-black tracking-widest">Alertes Stock</p>
                    <p class="text-2xl font-bold text-white">@Model.Produits.Count(p => p.Quantite < 5)</p>
                </div>
            </div>

            <div class="bg-slate-900 p-6 rounded-2xl border border-slate-800 flex items-center gap-5 transition-transform hover:scale-[1.02]">
                <div class="p-4 bg-emerald-500/10 text-emerald-400 rounded-xl border border-emerald-500/20">
                    <span class="material-symbols-outlined scale-125">account_balance_wallet</span>
                </div>
                <div>
                    <p class="text-xs text-slate-500 uppercase font-black tracking-widest">Valeur Estimée</p>
                    <p class="text-2xl font-bold text-white">
                        @Model.Produits.Sum(p => p.Prix * p.Quantite).ToString("N0") <span class="text-emerald-500 text-sm ml-1">GNF</span>
                    </p>
                </div>
            </div>
        </div>

        <div class="bg-slate-900 rounded-2xl border border-slate-800 shadow-2xl overflow-hidden">
            <div class="overflow-x-auto">
                <table class="w-full text-left">
                    <thead>
                        <tr class="bg-slate-800/50 border-b border-slate-700/50">
                            <th class="px-8 py-5 text-xs font-black text-slate-400 uppercase tracking-widest text-center">Aperçu</th>
                            <th class="px-6 py-5 text-xs font-black text-slate-400 uppercase tracking-widest">Désignation</th>
                            <th class="px-6 py-5 text-xs font-black text-slate-400 uppercase tracking-widest">Prix Unitaire</th>
                            <th class="px-6 py-5 text-xs font-black text-slate-400 uppercase tracking-widest">Stock</th>
                            <th class="px-8 py-5 text-xs font-black text-slate-400 uppercase tracking-widest text-right">Gestion</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-slate-800">
                        @foreach (var p in Model.Produits)
                        {
                            <tr class="hover:bg-slate-800/30 transition-all group">
                                <td class="px-8 py-4 whitespace-nowrap">
                                    <div class="relative w-14 h-14 mx-auto group/img overflow-hidden rounded-xl border border-slate-700 shadow-inner bg-slate-950">
                                        <img src="/images/@p.Image" class="w-full h-full object-cover opacity-80 group-hover:opacity-100 group-hover:scale-110 transition-all" />
                                    </div>
                                </td>
                                <td class="px-6 py-4">
                                    <div class="font-bold text-white group-hover:text-indigo-400 transition-colors">@p.Nom</div>
                                    <div class="text-xs text-slate-500 mt-0.5">
                                        @{
                                            var words = p.Description?.Split(' ');
                                            var shortDesc = words != null && words.Length > 2
                                            ? string.Join(" ", words.Take(2))
                                            : p.Description;
                                        }
                                        @shortDesc
                                        <button onclick="toggleModal('modalView-@p.Id')" class="text-indigo-400 hover:text-indigo-300 font-bold ml-1 cursor-pointer">...more</button>
                                    </div>
                                </td>
                                <td class="px-6 py-4">
                                    <span class="text-lg font-mono font-medium text-slate-200">@p.Prix.ToString("N0")<span class="text-indigo-500 ml-1 text-xs">GNF</span></span>
                                </td>
                                <td class="px-6 py-4">
                                    @if (p.Quantite < 5)
                                    {
                                        <div class="flex items-center gap-2 text-rose-500 animate-pulse">
                                            <span class="material-symbols-outlined text-sm">error</span>
                                            <span class="font-bold">@p.Quantite pcs</span>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="flex items-center gap-2 text-emerald-500 font-medium">
                                            <span class="w-2 h-2 rounded-full bg-emerald-500"></span>
                                            <span>@p.Quantite unités</span>
                                        </div>
                                    }
                                </td>
                                <td class="px-8 py-4 text-right">
                                    <div class="inline-flex bg-slate-950 p-1 rounded-xl border border-slate-800 shadow-lg">
                                        <button onclick="toggleModal('modalEdit-@p.Id')" class="p-2.5 text-slate-400 hover:text-amber-400 transition-all rounded-lg" title="Modifier">
                                            <span class="material-symbols-outlined">edit_square</span>
                                        </button>
                                        <div class="w-px h-6 bg-slate-800 my-auto"></div>

                                        <form method="post" asp-page-handler="Supprimer" onsubmit="return confirm('Confirmer la suppression ?')">
                                            <input type="hidden" name="id" value="@p.Id" />
                                            <button class="p-2.5 text-slate-400 hover:text-rose-500 transition-all rounded-lg" title="Supprimer">
                                                <span class="material-symbols-outlined">delete_forever</span>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>

                            <div id="modalView-@p.Id" class="hidden fixed inset-0 z-[100] flex items-center justify-center p-4">
                                <div class="absolute inset-0 bg-slate-950/80 backdrop-blur-md" onclick="toggleModal('modalView-@p.Id')"></div>
                                <div class="relative bg-slate-900 rounded-3xl border border-slate-700 shadow-2xl max-w-lg w-full overflow-hidden animate-zoom">
                                    <div class="h-48 bg-slate-800 relative">
                                        <img src="/images/@p.Image" class="w-full h-full object-contain p-4" />
                                        <button onclick="toggleModal('modalView-@p.Id')" class="absolute top-4 right-4 bg-slate-950/50 p-2 rounded-full text-white hover:bg-slate-950">
                                            <span class="material-symbols-outlined">close</span>
                                        </button>
                                    </div>
                                    <div class="p-8">
                                        <div class="flex justify-between items-start mb-6">
                                            <div>
                                                <h3 class="text-2xl font-black text-white">@p.Nom</h3>
                                                <span class="px-3 py-1 bg-indigo-500/10 text-indigo-400 text-xs font-bold rounded-full border border-indigo-500/20">ID: #@p.Id</span>
                                            </div>
                                            <div class="text-right">
                                                <p class="text-2xl font-mono font-bold text-emerald-400">@p.Prix.ToString("N0") GNF</p>
                                                <p class="text-slate-500 text-sm">@p.Quantite en stock</p>
                                            </div>
                                        </div>
                                        <div class="space-y-4">
                                            <h4 class="text-xs font-black text-slate-500 uppercase tracking-widest">Description Complète</h4>
                                            <p class="text-slate-300 leading-relaxed bg-slate-950/50 p-4 rounded-xl border border-slate-800">
                                                @p.Description
                                            </p>
                                        </div>
                                        <button onclick="toggleModal('modalView-@p.Id')" class="w-full mt-8 py-3 bg-slate-800 hover:bg-slate-700 text-white font-bold rounded-xl transition-all">
                                            Fermer
                                        </button>
                                    </div>
                                </div>
                            </div>

                            <div id="modalEdit-@p.Id" class="hidden fixed inset-0 z-[100] flex items-center justify-center p-4">
                                <div class="absolute inset-0 bg-slate-950/80 backdrop-blur-md" onclick="toggleModal('modalEdit-@p.Id')"></div>
                                <div class="relative bg-slate-900 rounded-3xl border border-slate-700 shadow-2xl max-w-md w-full overflow-hidden animate-slideUp">
                                    <form method="post" asp-page-handler="Modifier">

                                        <div class="relative h-32 w-full overflow-hidden border-b border-slate-700">
                                            <img src="/images/@p.Image" class="absolute inset-0 w-full h-full object-cover blur-sm opacity-30" />
                                            <div class="absolute inset-0 bg-gradient-to-t from-slate-900 via-transparent to-transparent"></div>

                                            <div class="relative p-6 flex justify-between items-center">
                                                <h3 class="text-xl font-bold text-white flex items-center gap-3">
                                                    <span class="material-symbols-outlined text-amber-400 drop-shadow-md">edit_note</span>
                                                    Modifier Produit
                                                </h3>
                                                <button type="button" onclick="toggleModal('modalEdit-@p.Id')" class="bg-slate-900/50 p-1 rounded-full text-slate-300 hover:text-white transition-colors">
                                                    <span class="material-symbols-outlined">close</span>
                                                </button>
                                            </div>
                                        </div>

                                        <div class="p-8 space-y-6">
                                            <input type="hidden" name="Produit.Id" value="@p.Id" />

                                            <div class="flex gap-4">
                                                <div class="w-12 h-12 rounded-lg border border-slate-700 overflow-hidden shrink-0 bg-slate-950">
                                                    <img src="/images/@p.Image" class="w-full h-full object-cover" />
                                                </div>
                                                <div class="flex-1">
                                                    <label class="block text-xs font-black text-slate-500 uppercase tracking-widest mb-2">Libellé</label>
                                                    <input name="Produit.Nom" value="@p.Nom" required class="w-full bg-slate-950 border border-slate-700 rounded-xl px-4 py-3 text-white outline-none focus:border-indigo-500" />
                                                </div>
                                            </div>

                                            <div class="grid grid-cols-2 gap-6">
                                                <div>
                                                    <label class="block text-xs font-black text-slate-500 uppercase tracking-widest mb-2">Prix (GNF)</label>
                                                    <input type="number" name="Produit.Prix" value="@p.Prix.ToString("F0")" required class="w-full bg-slate-950 border border-slate-700 rounded-xl px-4 py-3 text-white outline-none focus:border-indigo-500" />
                                                </div>
                                                <div>
                                                    <label class="block text-xs font-black text-slate-500 uppercase tracking-widest mb-2">Stock</label>
                                                    <input type="number" name="Produit.Quantite" value="@p.Quantite" required class="w-full bg-slate-950 border border-slate-700 rounded-xl px-4 py-3 text-white outline-none focus:border-indigo-500" />
                                                </div>
                                            </div>

                                            <div>
                                                <label class="block text-xs font-black text-slate-500 uppercase tracking-widest mb-2">Description</label>
                                                <textarea name="Produit.Description" rows="3" class="w-full bg-slate-950 border border-slate-700 rounded-xl px-4 py-3 text-white outline-none focus:border-indigo-500">@p.Description</textarea>
                                            </div>
                                        </div>

                                        <div class="p-6 bg-slate-950/50 flex gap-4">
                                            <button type="button" onclick="toggleModal('modalEdit-@p.Id')" class="flex-1 py-3 font-bold text-slate-400">Annuler</button>
                                            <button type="submit" class="flex-[2] py-3 bg-amber-500 hover:bg-amber-400 text-slate-950 font-black rounded-xl transition-all shadow-lg shadow-amber-500/20">ENREGISTRER</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div asp-validation-summary="All" class="text-red-600 mb-4"></div>

<div id="modalAjout" class=" @(Model.ShowAddModal ? "" : "hidden") fixed inset-0 z-[100] flex items-center justify-center p-4">
    <div class="absolute inset-0 bg-slate-950/80 backdrop-blur-md" onclick="toggleModal('modalAjout')"></div>
    <div class="relative bg-slate-900 rounded-[2.5rem] border border-slate-700 shadow-2xl max-w-xl w-full overflow-hidden animate-zoom">
           
        <form method="post"
              asp-page-handler="Ajouter"
              enctype="multipart/form-data">

            <div class="p-10 text-center">
                <div class="w-16 h-16 bg-indigo-500/10 text-indigo-400 rounded-2xl border border-indigo-500/20 flex items-center justify-center mx-auto mb-6">
                    <span class="material-symbols-outlined scale-150">add_circle</span>
                </div>
                <h3 class="text-3xl font-black text-white">Nouveau Stock</h3>
            </div>

            <div class="px-10 pb-10 space-y-6">
                <div>
                    <input asp-for="Produit.Nom"
                       placeholder="Nom du produit"
                       class="w-full bg-slate-950 border border-slate-700 rounded-2xl px-5 py-4 text-white outline-none"
                       required />
                    <span asp-validation-for="Produit.Nom" class="text-red-600"></span>

                </div>

                <div class="grid grid-cols-2 gap-6">
                    <div>
                        
                        <input 
                           asp-for="Produit.Prix"
                           type="number"
                           placeholder="Prix (GNF)"
                           class="w-full bg-slate-950 border border-slate-700 rounded-2xl px-5 py-4 text-white outline-none"
                           required
                           step="0.01"
                           inputmode="decimal"
                           lang="en" />
                        <span asp-validation-for="Produit.Prix" class="text-red-600"></span>
                    </div>
                    <div>

                        <input asp-for="Produit.Quantite" type="number"
                               placeholder="Stock"
                               class="w-full bg-slate-950 border border-slate-700 rounded-2xl px-5 py-4 text-white outline-none"
                               required />
                         <span asp-validation-for="Produit.Quantite" class="text-red-600"></span>
                    </div>
                </div>
                <div>
                    <textarea asp-for="Produit.Description"
                              rows="3"
                              placeholder="Description technique..."
                              class="w-full bg-slate-950 border border-slate-700 rounded-2xl px-5 py-4 text-white outline-none">
                    </textarea>
                    <span asp-validation-for="Produit.Description" class="text-red-600"></span>
                </div>

                <!--  UPLOAD IMAGE -->
                <div>
                    <label class="block text-slate-400 mb-2 font-semibold">
                        Image du produit
                    </label>
                    <span asp-validation-for="ImageUpload" class="text-red-600"></span>

                    <input type="file"
                           required
                           asp-for="ImageUpload"
                           accept="image/*"
                           class="w-full bg-slate-950 border border-slate-700 rounded-2xl px-5 py-4 text-slate-400 cursor-pointer" />

                </div>

                <div class="flex gap-4 pt-4">
                    <button type="button" onclick="toggleModal('modalAjout')" class="flex-1 py-4 font-bold text-slate-500">
                        Abandonner
                    </button>

                    <button type="submit" class="flex-[3] py-4 bg-indigo-500 text-white font-black rounded-2xl hover:bg-indigo-400 transition-all">
                        CRÉER PRODUIT
                    </button>
                </div>
            </div>
        </form>

    </div>
</div>

<script>

    function toggleModal(id) {

        const modal = document.getElementById(id);
        modal.classList.toggle('hidden');

    }

</script>

<style>
    @@keyframes slideUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@keyframes zoom {
        from {
            opacity: 0;
            transform: scale(0.95);
        }

        to {
            opacity: 1;
            transform: scale(1);
        }
    }

    .animate-slideUp {
        animation: slideUp 0.3s ease-out;
    }

    .animate-zoom {
        animation: zoom 0.25s ease-out;
    }
</style>

<script>
    const searchInput = document.getElementById('searchInput');
    const tableRows = document.querySelectorAll('tbody tr');

    searchInput.addEventListener('input', function() {
        const query = this.value.toLowerCase();

        tableRows.forEach(row => {
            const productName = row.querySelector('td:nth-child(2) div').textContent.toLowerCase();
            if (productName.includes(query)) {
                row.style.display = '';
            } else {
                row.style.display = 'none';
            }
        });
    });
</script>



