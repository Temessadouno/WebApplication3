@page
@model PanierModel
@{
    ViewData["Title"] = "Mon Panier";
    // Calcul pour la barre de progression (exemple: livraison gratuite à 200MAD)
    var totalPanier = Model.Panier?.Sum(p => p.Prix * p.Quantite) ?? 0;
    var seuilLivraison = 200;
    var progress = Math.Min((totalPanier / seuilLivraison) * 100, 100);
}

<div class="min-h-screen bg-[#0f172a] text-slate-200 py-10 px-4 font-sans relative">
    <div class="max-w-6xl mx-auto">

        <div class="flex flex-col md:flex-row justify-between items-end mb-8 border-b border-slate-800 pb-6">
            <div>
                <h1 class="text-3xl font-bold text-white flex items-center gap-3">
                    <span class="bg-blue-600/20 p-2 rounded-lg text-blue-500">
                        <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"></path></svg>
                    </span>
                    Votre Panier
                </h1>
                <p class="text-slate-400 mt-2 text-sm">Vous avez @(Model.Panier?.Sum(p => p.Quantite) ?? 0) articles prêts.</p>
            </div>

            @if (totalPanier > 0)
            {
                <div class="w-full md:w-64 mt-4 md:mt-0">
                    <div class="flex justify-between text-xs mb-1">
                        <span class="@(totalPanier >= seuilLivraison ? "text-green-400" : "text-slate-400")">
                            @(totalPanier >= seuilLivraison ? "Livraison offerte !" : $"Plus que {seuilLivraison - totalPanier}€ pour la livraison gratuite")
                        </span>
                        <span class="text-white font-bold">@((int)progress)%</span>
                    </div>
                    <div class="h-2 bg-slate-800 rounded-full overflow-hidden">
                        <div class="h-full bg-gradient-to-r from-blue-500 to-green-400 transition-all duration-500" style="width: @progress%"></div>
                    </div>
                </div>
            }
        </div>

        @if (Model.Panier == null || !Model.Panier.Any())
        {
            <div class="text-center py-20 bg-slate-900/50 rounded-2xl border border-slate-800 border-dashed">
                <div class="inline-flex items-center justify-center w-20 h-20 bg-slate-800 rounded-full mb-6">
                    <svg class="w-10 h-10 text-slate-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z"></path></svg>
                </div>
                <h2 class="text-xl font-medium text-white mb-2">Votre panier est vide</h2>
                <a href="/Produits" class="text-blue-400 hover:text-blue-300 underline underline-offset-4 transition">Découvrir nos produits</a>
            </div>
        }
        else
        {
            <div class="flex flex-col lg:flex-row gap-8 items-start">

                <div class="w-full lg:flex-1 bg-slate-900 rounded-2xl border border-slate-800 overflow-hidden shadow-xl">

                    <div class="hidden md:grid grid-cols-12 gap-4 p-4 bg-slate-800/50 text-xs font-semibold text-slate-400 uppercase tracking-wider border-b border-slate-700">
                        <div class="col-span-6">Produit</div>
                        <div class="col-span-3 text-center">Quantité</div>
                        <div class="col-span-3 text-right">Total</div>
                    </div>

                    <div class="divide-y divide-slate-800">
                        @foreach (var item in Model.Panier)
                        {
                            <div class="p-4 md:p-6 group hover:bg-slate-800/30 transition-colors">
                                <div class="grid grid-cols-1 md:grid-cols-12 gap-6 items-center">

                                    <div class="col-span-1 md:col-span-6 flex items-center gap-4">
                                        <div class="w-20 h-20 flex-shrink-0 bg-slate-800 rounded-lg overflow-hidden border border-slate-700">
                                            <img src="~/Images/@item.Image" alt="@item.Nom" class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500" />
                                        </div>
                                        <div>
                                            <h3 class="font-bold text-white text-lg leading-tight">@item.Nom</h3>
                                            <p class="text-slate-500 text-sm mt-1">Prix unit: <span class="text-slate-400">@item.Prix MAD</span></p>
                                        </div>
                                    </div>

                                    <div class="col-span-1 md:col-span-3 flex justify-start md:justify-center">
                                        <form method="post" id="form-@item.ProduitId" class="flex items-center bg-slate-950 rounded-lg border border-slate-700 p-1 shadow-inner">
                                            <input type="hidden" name="ProduitId" value="@item.ProduitId" />
                                            <input type="hidden" name="action" value="update" />

                                            <button type="button" onclick="updateQuantity(@item.ProduitId, -1, @item.StockDisponible)"
                                                    class="w-8 h-8 flex items-center justify-center text-slate-400 hover:text-white hover:bg-slate-800 rounded-md transition">
                                                -
                                            </button>

                                            <input type="number" name="Quantite" id="quantite-@item.ProduitId" value="@item.Quantite" readonly
                                                   class="w-12 bg-transparent text-center text-white font-medium focus:outline-none text-sm border-none p-0 appearance-none" />

                                            <button type="button" onclick="updateQuantity(@item.ProduitId, 1, @item.StockDisponible)"
                                                    class="w-8 h-8 flex items-center justify-center text-slate-400 hover:text-white hover:bg-slate-800 rounded-md transition">
                                                +
                                            </button>
                                        </form>
                                    </div>

                                    <div class="col-span-1 md:col-span-3 flex items-center justify-between md:justify-end gap-6">
                                        <div class="text-right">
                                            <p class="text-xs text-slate-500 md:hidden">Sous-total</p>
                                            <p class="text-xl font-bold text-blue-400">
                                                @((item.Prix * item.Quantite).ToString("N2")) MAD
                                            </p>
                                        </div>

                                        <form method="post">
                                            <input type="hidden" name="ProduitId" value="@item.ProduitId" />
                                            <button type="submit" name="action" value="delete"
                                                    class="text-slate-600 hover:text-red-400 p-2 rounded-full hover:bg-red-500/10 transition-all" title="Supprimer">
                                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path></svg>
                                            </button>
                                        </form>
                                    </div>

                                </div>
                            </div>
                        }
                    </div>
                </div>

                <div class="w-full lg:w-96 flex-shrink-0">
                    <div class="bg-slate-900 rounded-2xl border border-slate-800 p-6 sticky top-6 shadow-2xl">
                        <h2 class="text-lg font-bold text-white mb-6">Résumé de la commande</h2>

                        <div class="space-y-3 text-sm border-b border-slate-800 pb-6 mb-6">
                            <div class="flex justify-between text-slate-400">
                                <span>Sous-total</span>
                                <span class="text-white">@totalPanier.ToString("N2") MAD</span>
                            </div>
                            <div class="flex justify-between text-slate-400">
                                <span>Livraison</span>
                                @if (totalPanier >= seuilLivraison)
                                {
                                    <span class="text-green-400 font-medium">Gratuite</span>
                                }
                                else
                                {
                                    <span class="text-white">15.00 €</span>
                                }
                            </div>
                            <div class="flex justify-between text-slate-400">
                                <span>Taxes (est.)</span>
                                <span class="text-white">Included</span>
                            </div>
                        </div>

                        <div class="flex justify-between items-end mb-6">
                            <span class="text-slate-400 font-medium">Total</span>
                            <span class="text-3xl font-bold text-white">@totalPanier.ToString("N2") €</span>
                        </div>

                        <button class="w-full bg-blue-600 hover:bg-blue-500 text-white font-bold py-4 rounded-xl shadow-lg shadow-blue-900/20 hover:shadow-blue-600/20 transition-all transform hover:-translate-y-0.5 active:translate-y-0">
                            Payer maintenant
                        </button>

                        <div class="mt-6 flex items-center justify-center gap-2 text-slate-500 opacity-60">
                            <div class="h-6 w-10 bg-slate-700 rounded"></div>
                            <div class="h-6 w-10 bg-slate-700 rounded"></div>
                            <div class="h-6 w-10 bg-slate-700 rounded"></div>
                        </div>
                    </div>
                </div>

            </div>

            <form method="post" class="fixed bottom-8 left-8 z-50">
                <button type="submit" name="action" value="clear"
                        class="flex items-center gap-2 bg-slate-800/90 backdrop-blur border border-slate-700 text-slate-400 font-semibold py-3 px-6 rounded-full shadow-2xl transition-all duration-300 hover:bg-red-600 hover:text-white hover:border-red-500 hover:scale-105 group">

                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 transition-colors group-hover:text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                    </svg>

                    Vider le panier
                </button>
            </form>
        }
    </div>
</div>

<script>
    function updateQuantity(produitId, delta, maxStock) {
        const input = document.getElementById(`quantite-${produitId}`);
        const currentValue = parseInt(input.value);
        const newValue = currentValue + delta;

        // Validation simple
        if (newValue < 1 || newValue > maxStock) return;

        input.value = newValue;
        document.getElementById(`form-${produitId}`).submit();
    }
</script>